generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// This shit is insecure as fuck but because i am using sqlite it works for now.
model User {
  id         String   @id @default(uuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  username   String   @unique
  email      String   @unique 
  name       String
  bio        String 
  pfp        String 
  interests  String
  tech  String
  pronouns  String
  passwordHash String
  dob       DateTime 
}

