generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Project {
  id          String  @id @default(uuid()) @map("_id")
  name        String
  description String
  url         String
  image       String
  User        User?   @relation(fields: [userId], references: [id])
  userId      String?
} 

model Message {
  id           String    @id @default(uuid()) @map("_id")
  content    String
  timestamp  DateTime   @default(now())
  sender String
  room  String
}


model Room {
  id          String   @id @default(uuid()) @map("_id")
  users       String[] @unique
}

model User {
  id           String    @id @default(uuid()) @map("_id")
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  username     String    @unique
  email        String    @unique
  name         String
  bio          String
  pfp          String
  tech         String[]
  pronouns     String
  passwordHash String
  github       String 
  personalSite String 
  twitter      String
  dob          DateTime
  projects     Project[]
  matched String[]
  liked String[]
  blocked String[]
}
