generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Project {
  id          String  @id @default(uuid()) @map("_id")
  name        String
  description String
  image       String
  User        User?   @relation(fields: [userId], references: [id])
  userId      String?
}

model User {
  id           String    @id @default(uuid()) @map("_id")
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  username     String    @unique
  email        String    @unique
  name         String
  bio          String
  pfp          String
  interests    String[]
  tech         String[]
  pronouns     String
  passwordHash String
  github       String 
  personalSite String 
  twitter      String
  dob          DateTime
  projects     Project[]
}
